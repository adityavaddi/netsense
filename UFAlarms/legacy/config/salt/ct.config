{legacy, [
    {'publisher_pool', 'publisher_pool'},
    {rabbitmq, []},
    {s3, []},
    {ota, []},
    {metrics, []}
]}.

{lager, [
    {colored, true},
    {handlers, [
        {lager_console_backend, [
            info,
            {lager_default_formatter,
                [
                    color, time, " ", pid, " [", severity,"]",  {nodeid, [" [", nodeid, "]"], ""}, " [",
                    {module, ""}, {function, [":", function], ""}, {line, [":", line], ""}, "] ",
                    message, "\e[0m\r\n"
                ]
            }
        ]}
    ]}
]}.
