MATCH (s:Site {siteid: "{{siteid}}"})-[:HAS]->(n:Node), (c:Config {configid: "{{configid}}"})
OPTIONAL MATCH (other:Config)-[old:BELONGS_TO|HAS]-(n) WHERE other.configid <> "{{configid}}"
DELETE old
MERGE (n)-[:HAS]->(c)
MERGE (c)-[:BELONGS_TO]->(n)
RETURN DISTINCT COLLECT( DISTINCT {
    nodeid: n.nodeid,
    model: n.model
}) AS nodes
