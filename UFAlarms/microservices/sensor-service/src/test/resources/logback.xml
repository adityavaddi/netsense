<configuration>
    <statusListener class="ch.qos.logback.core.status.NopStatusListener"/>


    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">

        <encoder>
            <charset>UTF-8</charset>
            <pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX, UTC} [%thread] %highlight(%-5level) %cyan(%logger{35}) - %msg %n</pattern>
        </encoder>
    </appender>

    <logger name="org.apache.kafka.clients.consumer.KafkaConsumer" level="${kafka_logging_level:-ERROR}"/>
    <logger name="org.apache.kafka.clients.consumer.internals.Fetcher" level="${kafka_logging_level:-ERROR}"/>
    <logger name="org.apache.kafka.clients.consumer.internals.ConsumerCoordinator"
            level="${kafka_logging_level:-ERROR}"/>
    <logger name="org.apache.kafka.clients.consumer.internals.AbstractCoordinator"
            level="${kafka_logging_level:-ERROR}"/>
    <logger name="org.apache.kafka.clients.NetworkClient" level="${kafka_logging_level:-ERROR}"/>
    <logger name="org.apache.kafka.common.metrics.Metrics" level="ERROR"/>
    <logger name="org.apache.kafka.clients.producer.KafkaProducer" level="${kafka_logging_level:-ERROR}"/>
    <logger name="org.apache.kafka.common.network.Selector" level="${kafka_logging_level:-ERROR}"/>
    <logger name="org.apache.kafka.clients.Metadata" level="${kafka_logging_level:-ERROR}"/>
    <logger name="org.apache.kafka.clients.producer.internals.Sender" level="${kafka_logging_level:-ERROR}"/>


    <logger name="org.apache.kafka.log.Log" level="${kafka_logging_level:-ERROR}"/>
    <logger name="org.apache.kafka.log.TimeIndex" level="${kafka_logging_level:-ERROR}"/>
    <logger name="org.apache.kafka.log.LogManager" level="${kafka_logging_level:-ERROR}"/>
    <logger name="org.apache.kafka.controller.KafkaController" level="${kafka_logging_level:-ERROR}"/>

    <logger name="org.apache.kafka.server.KafkaRequestHandler" level="${kafka_logging_level:-ERROR}"/>
    <logger name="org.apache.kafka.network.Processor" level="${kafka_logging_level:-ERROR}"/>
    <logger name="org.apache.kafka.controller.PartitionStateMachine" level="${kafka_logging_level:-ERROR}"/>
    <logger name="org.apache.kafka.utils.KafkaScheduler" level="${kafka_logging_level:-ERROR}"/>
    <logger name="org.apache.kafka.server.ReplicaManager" level="${kafka_logging_level:-ERROR}"/>
    <logger name="org.apache.kafka.cluster.Partition" level="${kafka_logging_level:-ERROR}"/>

    <logger name="org.apache.kafka.utils.ZkUtils" level="ERROR"/>
    <logger name="org.apache.zookeeper.server.FinalRequestProcessor" level="ERROR"/>
    <logger name="org.apache.zookeeper.ClientCnxn" level="ERROR"/>
    <logger name="org.apache.zookeeper.Zookeeper" level="ERROR"/>
    <logger name="org.apache.zookeeper.server.PrepRequestProcessor" level="ERROR"/>
    <logger name="org.I0Itec.zkclient.ZkClient" level="ERROR"/>

    <logger name="com.outworkers.phantom" level="${cassandra_logging_level:-ERROR}"/>
    <logger name="com.datastax.driver.core.Connection" level="${cassandra_logging_level:-ERROR}"/>


    <root level="${logging_level:-INFO}">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>